// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model StatisticsColor {
  id         Int          @id @default(autoincrement())
  via        String
  text       String
  statistics Statistics[]
}

model Statistics {
  id          Int             @id @default(autoincrement())
  title       String
  description String
  color       StatisticsColor @relation(fields: [id], references: [id])
}
